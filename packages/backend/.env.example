# Application Settings
APP_NAME="FlowMastery Backend"
APP_VERSION="2.0.0"
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5176

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/flowmastery
DB_ECHO=false

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Email Configuration (for invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@flowmastery.com

# Frontend URL (for invitation links)
FRONTEND_URL=http://localhost:3000

# n8n Integration (configured per client)
# N8N_API_URL and N8N_API_KEY are now stored per client in the database

# AI Services
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60