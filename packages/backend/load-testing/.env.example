# FlowMastery Load Testing Environment Configuration
# Copy this file to .env and configure with your values

# Backend Configuration
LOAD_TEST_BASE_URL=http://localhost:8000
API_VERSION=v1

# Admin Credentials (Required for client management tests)
ADMIN_EMAIL=vivek.soni@e2m.solutions
ADMIN_PASSWORD=YourAdminPasswordHere

# Test User Credentials
TEST_USER_EMAIL=test.user@example.com
TEST_USER_PASSWORD=TestPassword123!

# Load Testing Parameters
LOAD_TEST_USERS=10
LOAD_TEST_SPAWN_RATE=2
LOAD_TEST_RUN_TIME=60s

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
MAX_RPS=100

# Test Data Configuration  
GENERATE_TEST_DATA=true
TEST_CLIENT_COUNT=5
TEST_USER_COUNT=20

# Database Configuration (for cleanup)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/metrics_dashboard

# Reporting Configuration
REPORTS_DIR=./reports
ENABLE_CSV_EXPORT=true
ENABLE_HTML_REPORT=true

# Test Focus (auth, client, concurrent, balanced)
LOAD_TEST_FOCUS=balanced