# ===============================
# FRONTEND ENVIRONMENT CONFIG
# For independent frontend deployment
# ===============================

# API Configuration
# This should point to your deployed backend API
# For local development: http://localhost:8000
# For production: https://your-backend-api-domain.com
VITE_API_URL=http://localhost:8000

# App Configuration
VITE_APP_NAME=FlowMastery
VITE_APP_VERSION=2.0.0

# Development Configuration
VITE_DEV_MODE=true

# Build Configuration
# Set to false in production for better performance
VITE_SOURCE_MAPS=true

# Analytics/Monitoring (Optional)
# Uncomment and configure if using analytics services
# VITE_ANALYTICS_ID=your-analytics-id
# VITE_SENTRY_DSN=your-sentry-dsn

# Feature Flags (Optional)
# Use these to enable/disable features
VITE_ENABLE_CHAT=true
VITE_ENABLE_METRICS=true
VITE_ENABLE_ADMIN_PANEL=true

# Theme Configuration (Optional)
VITE_DEFAULT_THEME=light

# API Timeouts (Optional)
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3

