# Application Settings
APP_NAME="FlowMastery Platform"
APP_VERSION="2.0.0"
DEBUG=true

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Generate SECRET_KEY using: python -c "import secrets; print(secrets.token_hex(32))"
# Must be exactly 64 characters (32 bytes hex-encoded)
SECRET_KEY=CHANGE_ME_GENERATE_WITH_PYTHON_SECRETS_TOKEN_HEX_32_EXACTLY_64_CHARS
ENCRYPTION_KEY=your-32-char-encryption-key-here!!
ACCESS_TOKEN_EXPIRE_MINUTES=4320
ALGORITHM=HS256

# Trusted Hosts
# Comma-separated list of allowed hostnames (no wildcards in production)
# Example: localhost,yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (PostgreSQL)
# CRITICAL: Change these credentials in production!
POSTGRES_DB=metrics_dashboard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD_HERE
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DB_ECHO=false

# Redis Cache
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# Email Configuration (for user invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-or-oauth-token
SMTP_USE_TLS=true
FROM_EMAIL=noreply@flowmastery.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Backend API Configuration
VITE_API_URL=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5176,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:5176,http://localhost:8000,http://127.0.0.1:8000

# CORS Security
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Content-Type,Authorization,Accept,Origin,User-Agent,Cache-Control,X-Requested-With,ngrok-skip-browser-warning

# n8n Integration
N8N_BASE_URL=http://host.docker.internal:5678
N8N_API_URL=https://your-n8n-instance.com/api/v1
N8N_API_KEY=your-n8n-api-key-here

# AI Services (Optional)
GEMINI_API_KEY=your-gemini-api-key-optional
OPENAI_API_KEY=your-openai-api-key-optional

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Frontend App Configuration
VITE_APP_NAME=FlowMastery
VITE_APP_VERSION=2.0.0
VITE_DEV_MODE=true