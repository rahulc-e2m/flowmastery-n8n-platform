# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
APP_NAME=FlowMastery
APP_VERSION=2.0.0

# Backend API (New Architecture)
API_URL=http://localhost:8000
API_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Frontend
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=FlowMastery
VITE_APP_VERSION=2.0.0

# Database
DATABASE_URL=postgresql+asyncpg://flowmastery:flowmastery@localhost:5432/flowmastery
DB_ECHO=false

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# n8n Integration
N8N_API_URL=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# AI Services
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@flowmastery.io

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated for new backend)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5176

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["pdf","png","jpg","jpeg","gif","csv","xlsx","txt"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_METRICS_DASHBOARD=true
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_PROCESSING=true
